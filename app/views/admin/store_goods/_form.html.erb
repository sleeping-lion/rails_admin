	<%= f.label :hot_flag %>
	<%= f.check_box :hot_flag %>
</div>
<div class="form-group">
	<%= f.label :new_flag %>
	<%= f.check_box :new_flag %>
</div>
<div class="form-group">
	<%= f.label :flag %>
	<%= f.check_box :flag %>
</div>
<div class="form-group actions">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>
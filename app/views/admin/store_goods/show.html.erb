<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section class="sl_show">
	<p>
		<b><%=t(:label_title) %></b>
		<%= @store_good.title %>
	</p>
	<p>
		<b><%=t(:label_description_short) %></b>
		<%= @store_good.description_short %>
	</p>
	<p>
		<b><%=t(:label_description) %></b>
		<%= @store_good.description %>
	</p>
	<p>
		<b><%=t(:label_stock_count) %></b>
		<%= @store_good.stock_count %>
	</p>
	<p>
		<b><%=t(:label_order_count) %></b>
		<%= @store_good.order_count %>
	</p>
	<p>
		<b><%=t(:label_sale_period) %></b>
		<%= @store_good.sale_start_time %> ~ <%= @store_good.sale_end_time %>
	</p>
	<p>
		<b><%=t(:label_sale_price) %></b>
		<%= @store_good.sale_price %>
	</p>
	<p>
		<b><%=t(:label_sale_type) %></b>
		<%= @store_good.sale_type %>
	</p>
	<p>
		<b><%=t(:label_proirity_flag) %></b>
		<%= @store_good.proirity_flag %>
	</p>
	<p>
		<b><%=t(:label_hot_flag) %></b>
		<%= @store_good.hot_flag %>
	</p>
	<p>
		<b><%=t(:label_new_flag) %></b>
		<%= @store_good.new_flag %>
	</p>		
	<p>
		<b><%=t(:label_updated_at) %></b>
		<%= @store_good.created_at %>		
	</p>
	<p>
		<b><%=t(:label_created_at) %></b>
		<%= @store_good.updated_at %>			
	</p>		
	<p>
		<b><%=t(:label_flag) %></b>
		<%=raw flagToString(@store_good.flag) %>
	</p>
	<section id="sl_ad_files" class="sub_section">
		<h3>이미지</h3>
		<table  class="table table-striped table-bordered">
			<colgroup>
				<col />		
				<col />
				<col style="width:230px" />
				<col style="width:230px" />
				<col style="width:100px"  />			
				<col style="width:160px" />				
			</colgroup>		
			<thead>
				<tr>
					<th><%=t(:label_title)%></th>
					<th><%=t(:label_image)%></th>
					<th><%=t(:label_created_at)%></th>
					<th><%=t(:label_updated_at)%></th>
					<th><%=t(:label_flag)%></th>					
					<th><%=t(:label_manage)%></th>
				</tr>
			</thead>
			<tbody>
				<%= render @store_good_pictures %>
			</tbody>
		</table>
		<div id="sl_store_goods_picture_form">
			<%= render "admin/store_good_pictures/form" %>
		</div>
	</section>
</section>
<%= link_to t(:link_edit), edit_admin_store_good_path(@store_good) %> |
<%= link_to t(:link_list), admin_store_goods_path(list_param(params)) %>
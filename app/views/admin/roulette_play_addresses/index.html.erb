<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>

<div class="total_layer">
	<%=t(:current_address)%> : <%=number_with_delimiter @roulette_play_address_count %> <%=t(:count_address)%>
</div>

<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col style="width:80px;" />
		<col style="width:80px;" />		
		<col style="width:150px;" />
		<col />
		<col style="width:250px;" />
		<col />
		<col style="width:80px;" />
		<% if can?(:update, RoulettePlayAddress) || can?(:delete, RoulettePlayAddress) %>
		<col <%=raw manage_width(RoulettePlayAddress) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number)%></th>
			<th><%=t(:label_address_id)%></th>	
			<th><%=t(:label_roulette_play_id)%></th>
			<th><%=t(:label_receiver_name) %></th>
			<th><%=t(:label_mobile_num) %></th>			
			<th><%=t(:label_address) %></th>
			<th><%=t(:label_created_at)%></th>
			<% if can?(:update, RoulettePlayAddress) || can?(:delete, RoulettePlayAddress) %>
			<th><%=t(:label_manage) %></th>
			<th><%=t(:label_primary_flag) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
	<% unless @roulette_play_addresses.empty? %>
	<% @roulette_play_addresses.each do |roulette_play_address| %>
  <tr>
    <td><%= roulette_play_address.id%></td>
    <td><%=link_to roulette_play_address.address_id, roulette_play_address_path(roulette_play_address) %></td>    
    <td><%= roulette_play_address.roulette_play_id%></td>
    <td><%= roulette_play_address.name %></td>
    <td><%= roulette_play_address.mobilephone %></td>
    <td><%= roulette_play_address.address %></td>
    <td><%= roulette_play_address.created_at.to_date %></td>
    <td><%= roulette_play_address.primary_flag %></td>
	<td>
		<%= link_to edit_roulette_play_address_path(roulette_play_address),:class=>"btn btn-small pull-left" do %> <i class="icon-pencil"></i> <%= t(:link_edit) %> <% end %>
		<%= link_to roulette_play_address, :method => :delete, :data => { :confirm =>t(:delete_confirm)},:class=>"btn btn-small btn-danger pull-right" do %> <i class="icon-trash"></i> <%= t(:link_delete) %>	<% end %>
    </td>
  </tr>
  <% end %>
	<% else %>
		<tr>
			<td colspan="10"><%=t(:no_data)%></td>
		</tr>
	<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<div class="pull-left">
		<% if can? :create, RoulettePlayAddress %>
		<%= link_to new_roulette_play_address_path, :class=>"btn" do %>
		<i class="icon-plus"></i> <%=t(:link_new) %>
		<% end %>
		<% end %>	
	</div>	
	<%= paginate @roulette_play_addresses %>
</div>

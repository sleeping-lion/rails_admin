<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section class="sl_show">
  <p>
  	<b><%=t(:label_title) %></b>
  	<%= @bank.name %>
  </p>
  <p>
  	<b><%=t(:label_flag) %></b>
  	<%=raw flagToString(@bank.flag) %>
  </p>
  <p>
  	<b><%=t(:label_created_at) %></b>
  	<%= @bank.created_at %>
  </p>
  <p>
  	<b><%=t(:label_updated_at) %></b>
  	<%= @bank.created_at %>
  </p>
</section>
<% if can? :update, @bank %>	
<%= link_to t(:link_edit), edit_admin_bank_path(@bank) %> |
<% end %>
<%= link_to t(:link_list), admin_banks_path %>

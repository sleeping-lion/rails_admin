<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:80px;" />		
		<col style="width:80px;" />		
		<col style="width:100px;" />
		<% if can?(:update, Market) || can?(:delete, Market) %>
		<col <%=raw manage_width(Market) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_title) %></th>
			<th><%=t(:label_count) %></th>
			<th><%=t(:label_flag) %></th>
			<th><%=t(:label_created_at) %></th>
			<% if can?(:update, Market) || can?(:delete, Market) %>		
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @markets.empty? %>
		<% @markets.each do |market| %>
		<tr>
			<td><%=market.id %></td>
			<td class="mw"><%=link_to market.title,market_path(market) %></td>
			<td><%=market.count %></td>			
			<td><%=raw flagToString(market.flag) %></td>
			<td><%=market.created_at.to_date %></td>
			<% if can?(:update, market) || can?(:delete, market) %>
			<td>
				<% if can? :update, market %>
				<%= link_to edit_market_path(market),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, market %>				
				<%= link_to market, :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="6"><%=t(:no_data)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<div class="pull-left">
		<% if can? :create, Market %>
		<%= link_to new_market_path, :class=>"btn" do %>
		<i class="icon-plus"></i> <%=t(:link_new) %>
		<% end %>
		<% end %>	
	</div>
	<%= paginate @markets %>
</div>
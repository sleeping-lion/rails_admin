<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col style="width:80px;" />		
		<col />
		<col style="width:200px;" />
		<% if can?(:update, RouletteBackground) || can?(:delete, RouletteBackground) %>
		<col <%=raw manage_width(RouletteBackground) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number)%></th>
			<th><%=t(:label_image)%></th>	
			<th><%=t(:label_title)%></th>
			<th><%=t(:label_created_at)%></th>
			<% if can?(:update, RouletteBackground) || can?(:delete, RouletteBackground) %>
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
	<% unless @roulette_backgrounds.empty? %>
	<% @roulette_backgrounds.each do |roulette_background| %>
  <tr>
    <td><%=link_to roulette_background.id, roulette_background_path(roulette_background) %></td>
    <td><%=image_tag roulette_background.photo.medium_thumb %></td>    
    <td><%=link_to roulette_background.title, roulette_background_path(roulette_background) %></td>
    <td><%= roulette_background.created_at.to_date %></td>
		<% if can?(:update, roulette_background) || can?(:delete, roulette_background) %>
			<td>
				<% if can? :update, roulette_background %>
				<%= link_to edit_roulette_background_path(roulette_background),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, roulette_background %>
				<%= link_to roulette_background, :method => :delete, :data => { :confirm =>t(:delete_confirm)},:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
		<% end %>
  </tr>
  <% end %>
	<% else %>
		<tr>
			<td colspan="10"><%=t(:no_data)%></td>
		</tr>
	<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<div class="pull-left">
		<% if can? :create, RouletteBackground %>
		<%= link_to new_roulette_background_path, :class=>"btn" do %>
		<i class="icon-plus"></i> <%=t(:link_new) %>
		<% end %>
		<% end %>	
	</div>	
	<%= paginate @roulette_backgrounds %>
</div>

<section id="sl_ad_schedule_targets" class="sub_section">
	<h3><%=t(:label_target) %></h3>
	<% unless @ad_targets.empty? %>	
	<table  class="table table-striped table-bordered">
		<colgroup>
			<col style="width:100px"  />
			<col />
			<col style="width:100px"  />
			<% if can?(:update, AdTarget) || can?(:delete, AdTarget) %>			
			<col style="width:160px" />
			<% end %>
		</colgroup>
		<thead>
		<tr>
			<th><%=t(:label_target) %> <%=t(:label_category)%></th>
			<th><%=t(:label_target)%></th>
			<th><%=t(:label_flag)%></th>
			<% if can?(:update, AdTarget) || can?(:delete, AdTarget) %>		
			<th><%=t(:label_manage)%></th>
			<% end %>			
		</tr>
		</thead>
		<tbody>
			<%= render @ad_targets %>
		</tbody>
	</table>
	<% else %>
		<p><%=t(:no_data) %></p>
	<% end %>
	<% if can? :create, AdTarget %>
	<div id="sl_ad_schedule_form">
		<%= render "admin/ad_targets/form" %>
	</div>
	<% end %>
</section>
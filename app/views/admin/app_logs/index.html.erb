<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:220px;" />
		<% if can?(:update, AppLog) || can?(:delete, AppLog) %>
		<col <%=raw manage_width(AppLog) %> />
		<% end %>		
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_title) %></th>
			<th><%=t(:label_created_at) %></th>
			<% if can?(:update, AppLog) || can?(:delete, AppLog) %>
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @app_logs.empty? %>
		<% @app_logs.each do |app_log| %>
		<tr>
			<td><%=app_log.id %></td>
			<td class="mw"><%=app_log.title %></td>
			<td><%=ad_log_type.created_at %></td>
			<% if can?(:update, app_log) || can?(:delete, app_log) %>
			<td>
				<% if can? :update, app_log %>				
				<%= link_to edit_app_log_path(ad_log_type),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, app_log %>				
				<%= link_to app_log, :method => :delete, :data => { :confirm => t(:delete_cascade_confirm) },:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>				
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="4"><%=t(:no_data)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, AppLog %>
		<%= link_to new_admin_app_log_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @app_logs %>
</div>

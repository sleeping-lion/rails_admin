<tr>
	<td>
		<%=ad_target_cid.id %>
	</td>	
	<td>
		<%=ad_target_cid.cid %>	
	</td>
	<td><%= raw flagToString(ad_target_cid.flag) %></td>
	<% if can?(:update, ad_target_cid) || can?(:delete, ad_target_cid) %>
	<td>
		<% if can?(:update, ad_target_cid) %>
		<%= link_to edit_ad_ad_schedule_ad_target_cid_path(@ad_schedule.ad,@ad_schedule,ad_target_cid),:class=>"btn btn-small pull-left" do %>
		<i class="icon-pencil"></i> <%=t(:link_edit) %>
		<% end %>
		<% end %>
		<% if can?(:delete, ad_target_cid) %>
		<%= link_to [@ad_schedule.ad,@ad_schedule,ad_target_cid], :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-small btn-danger pull-right" do %>
		<i class="icon-trash"></i> <%=t(:link_delete) %>
		<% end %>
		<% end %>
	</td>
	<% end %>
</tr>
</div>
<div class="form-group">
	<%= f.label :address %>
	<%= f.text_field :address,:class=>"form-control" %>
</div>
<div class="form-group">
	<%= f.label :mobilephone %>
	<%= f.text_field :mobilephone,:class=>"form-control" %>
</div>

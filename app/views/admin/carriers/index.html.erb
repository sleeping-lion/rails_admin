<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
</div>
<div class="table-responsive">
	<table>
		<tr>
			<th>Code</th>
			<th>Name</th>
			<th>Flag</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% @carriers.each do |carrier| %>
		<tr>
			<td><%= carrier.code %></td>
			<td><%= carrier.name %></td>
			<td><%= carrier.flag %></td>
			<td><%= link_to 'Show', carrier %></td>
			<td><%= link_to 'Edit', edit_carrier_path(carrier) %></td>
			<td><%= link_to 'Destroy', carrier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</table>
</div>
<%= link_to 'New Carrier', new_carrier_path %>

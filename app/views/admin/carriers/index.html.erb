<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<tr>
			<th>Code</th>
			<th>Name</th>
			<th>Flag</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<% @carriers.each do |carrier| %>
		<tr>
			<td><%= carrier.code %></td>
			<td><%= carrier.title %></td>
			<td><%= carrier.flag %></td>
			<td><%= link_to 'Show', carrier %></td>
			<td><%= link_to 'Edit', edit_admin_carrier_path(carrier) %></td>
			<td><%= link_to 'Destroy', carrier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, Carrier %>
		<%= link_to new_admin_carrier_path, :class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @carriers %>
</div>

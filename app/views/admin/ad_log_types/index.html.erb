<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:220px;" />
		<% if can?(:update, AdLogType) || can?(:delete, AdLogType) %>
		<col <%=raw manage_width(AdLogType) %> />
		<% end %>		
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_title) %></th>
			<th><%=t(:label_created_at) %></th>
			<% if can?(:update, AdLogType) || can?(:delete, AdLogType) %>
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @ad_log_types.empty? %>
		<% @ad_log_types.each do |ad_log_type| %>
		<tr>
			<td><%= link_to ad_log_type.id,ad_log_type_path(ad_log_type) %></td>
			<td class="mw"><%= link_to ad_log_type.title,ad_log_type_path(ad_log_type) %></td>
			<td><%=ad_log_type.created_at %></td>
			<% if can?(:update, ad_log_type) || can?(:delete, ad_log_type) %>
			<td>
				<% if can? :update, ad_log_type %>				
				<%= link_to edit_ad_log_type_path(ad_log_type),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, ad_log_type %>				
				<%= link_to ad_log_type, :method => :delete, :data => { :confirm => t(:delete_cascade_confirm) },:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>				
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="4"><%=t(:no_data)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<% if can? :create, AdLogType %>
		<div class="pull-left">	
		<%= link_to new_ad_log_type_path, :class=>"btn" do %>
		<i class="icon-plus"></i> <%= t(:link_new) %>
		<% end %>
		</div>
	<% end %>
	<%= paginate @ad_log_types %>
</div>
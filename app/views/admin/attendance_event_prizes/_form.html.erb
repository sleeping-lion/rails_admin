</div>
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title,:class=>"form-control" %>
</div>
<div class="form-group">
	<%= f.label :count %>
	<%= f.number_field :count,:class=>"form-control" %>
</div>
<div class="form-group">
	<%= f.label :photo %>
	<%= f.file_field :photo %>
	<%= f.hidden_field :photo_cache %>
</div>
<div class="form-group">
	<%= f.label :flag %>
	<%= f.check_box :flag %>
</div>
<div class="actions">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>

<%= form_for [:admin,@attendance_event_prize] do |f| %>
<% if @attendance_event_prize.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(@attendance_event_prize.errors.count, "error") %> prohibited this point from being saved:</h2>
	<ul>
		<% @attendance_event_prize.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :attendance_event_id %>

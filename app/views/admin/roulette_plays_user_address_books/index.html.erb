<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
</div>

<div class="total_layer">
	<%= t(:current_address)%> : <%= number_with_delimiter @roulette_play_address_count %> <%= t(:count_address)%>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />
			<col style="width:80px;" />
			<col style="width:80px;" />
			<col style="width:150px;" />
			<col />
			<col style="width:250px;" />
			<col />
			<col style="width:80px;" />
			<% if can?(:update, RoulettePlayAddress) || can?(:delete, RoulettePlayAddress) %>
			<col <%= raw manage_width(RoulettePlayAddress) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number)%></th>
				<th><%= t(:label_address_id)%></th>
				<th><%= t(:label_roulette_play_id)%></th>
				<th><%= t(:label_receiver_name) %></th>
				<th><%= t(:label_mobile_num) %></th>
				<th><%= t(:label_address) %></th>
				<th><%= t(:label_created_at)%></th>
				<% if can?(:update, RoulettePlayAddress) || can?(:delete, RoulettePlayAddress) %>
				<th><%= t(:label_manage) %></th>
				<th><%= t(:label_primary_flag) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @roulette_play_addresses.empty? %>
			<% @roulette_play_addresses.each do |roulette_play_address| %>
			<tr>
				<td><%= roulette_play_address.id%></td>
				<td><%= link_to roulette_play_address.address_id, admin_roulette_play_address_path(roulette_play_address) %></td>
				<td><%= roulette_play_address.roulette_play_id%></td>
				<td><%= roulette_play_address.name %></td>
				<td><%= roulette_play_address.mobilephone %></td>
				<td><%= roulette_play_address.address %></td>
				<td><%= roulette_play_address.created_at.to_date %></td>
				<td><%= roulette_play_address.primary_flag %></td>
				<td> <%= link_to edit_admin_roulette_play_address_path(roulette_play_address),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<%= link_to admin_roulette_play_address_path(roulette_play_address), :method => :delete, :data => { :confirm =>t(:delete_confirm)},:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %> </td>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="10"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create,  %>
		<%= link_to new_admin_roulette_plays_user_address_book_path, :class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @roulette_play_addresses %>
</div>

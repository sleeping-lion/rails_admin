<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:50px;" />		
		<col style="width:80px;" />	
		<col />
		<col />
		<col style="width:120px;" />
		<% if can?(:update, AttendanceSetting) || can?(:delete, AttendanceSetting) %>
		<col <%=raw manage_width(AttendanceSetting) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_photo)%></th>			
			<th><%=t(:label_title)%></th>			
			<th>headtext</th>
			<th><%=t(:label_created_at)%></th>
			<% if can?(:update, AttendanceSetting) || can?(:delete, AttendanceSetting) %>
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
	<% unless @attendance_settings.empty? %>
	<% @attendance_settings.each do |attendance_setting| %>
  <tr>
    <td><%= attendance_setting.id %></td>  	
    <td><%= image_tag attendance_setting.photo.small_thumb %></td>
    <td><%= attendance_setting.title %></td>
    <td><%= attendance_setting.headtext %></td>
    <td><%= attendance_setting.created_at.to_date %></td>
		<% if can?(:update, attendance_setting) || can?(:delete, attendance_setting) %>
			<td>
				<% if can? :update, attendance_setting %>
				<%= link_to edit_attendance_setting_path(attendance_setting),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, attendance_setting %>
				<%= link_to attendance_setting, :method => :delete, :data => { :confirm =>t(:delete_confirm)},:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
		<% end %>
  </tr>
  <% end %>
	<% else %>
		<tr>
			<td colspan="10"><%=t(:no_data)%></td>
		</tr>
	<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<div class="pull-left">
		<% if can? :create, AttendanceSetting %>
		<%= link_to new_admin_attendance_setting_path, :class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
		<% if can? :manage, AttendanceSetting %>		
		<% unless @attendance_settings.empty? %>
		<%=link_to admin_attendance_settings_path(:format=>"xls",:params=>params), :class=>"btn" do %>
		<i class="icon-file"></i> <%=t(:link_download_excel) %>
		<% end %>
		<% end %>
		<% end %>		
	</div>	
	<%= paginate @attendance_settings %>
</div>

<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col style="width:120px;" />		
		<col />
		<col />
		<col style="width:80px" />		
		<col style="width:120px;" />		
		<% if can?(:update, Attendance) || can?(:delete, Attendance) %>
		<col <%=raw manage_width(Attendance) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_today)%></th>			
			<th>user_id</th>
			<th><%=t(:label_count)%></th>			
			<th><%=t(:label_flag) %></th>
			<th><%=t(:label_created_at)%></th>
			<% if can?(:update, Attendance) || can?(:delete, Attendance) %>
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
	<% unless @attendances.empty? %>
	<% @attendances.each do |attendance| %>
  <tr>
    <td><%= attendance.id %></td>
    <td><%= attendance.today %></td>
    <td><%= attendance.user_id %></td>    
    <td><%= attendance.count %></td>
    <td><%=raw flagToString(attendance.flag) %></td>
    <td><%= attendance.created_at.to_date %></td>
		<% if can?(:update, attendance) || can?(:delete, attendance) %>
			<td>
				<% if can? :update, attendance %>
				<%= link_to edit_attendance_path(attendance),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, attendance %>
				<%= link_to attendance, :method => :delete, :data => { :confirm =>t(:delete_confirm)},:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
		<% end %>
  </tr>
  <% end %>
	<% else %>
		<tr>
			<td colspan="6"><%=t(:no_data)%></td>
		</tr>
	<% end %>
	</tbody>
</table>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, Attendance %>
		<%= link_to new_admin_attendance_path, :class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
		<% if can? :manage, Attendance %>		
		<% unless @attendances.empty? %>
		<%=link_to attendances_path(:format=>"xls",:params=>params), :class=>"btn" do %>
		<i class="icon-file"></i> <%=t(:link_download_excel) %>
		<% end %>
		<% end %>
		<% end %>	
	</div>
	<%= paginate @attendances %>
</div>

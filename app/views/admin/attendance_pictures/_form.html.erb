 		<%= f.label :start_date %>
 		<%= f.date_select :start_date %>
 	</div>   	  
  <div class="control-group">
 		<%= f.label :photo %>
 		<%= f.file_field :photo %>
 		<%= f.hidden_field :photo_cache %>
 	</div>
  <div class="control-group">
 		<%= f.label :flag %>
 		<%= f.check_box :flag %>
 	</div>

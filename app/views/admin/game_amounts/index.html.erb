<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:80px;" />		
		<col style="width:200px;" />
		<% if can?(:update, GameAmount) || can?(:delete, GameAmount) %>
		<col <%=raw manage_width(GameAmount) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_bet_amount) %></th>
			<th><%=t(:label_flag) %></th>			
			<th><%=t(:label_created_at) %></th>
			<% if can?(:update, GameAmount) || can?(:delete, GameAmount) %>
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @game_amounts.empty? %>
		<% @game_amounts.each do |game_amount| %>
		<tr>
			<td><%=link_to game_amount.id,game_amount_path(game_amount) %></td>
			<td><%=link_to game_amount.amount,game_amount_path(game_amount) %></td>
			<td><%= raw flagToString(game_amount.flag) %></td>			
			<td><%=game_amount.created_at %></td>
			<% if can?(:update, game_amount) || can?(:delete, game_amount) %>
			<td>
				<% if can? :update, game_amount %>
				<%= link_to edit_game_amount_path(game_amount),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, game_amount %>		
				<%= link_to game_amount, :method => :delete, :data => { :confirm =>t(:delete_confirm)},:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="6"><%=t(:no_data)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<% if can? :create, GameAmount %>				
	<div class="pull-left">		
		<%= link_to new_game_amount_path, :class=>"btn" do %>
		<i class="icon-plus"></i> <%=t(:link_new) %>
		<% end %>
	</div>	
	<% end %>
	<%= paginate @game_amounts %>
</div>
<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:50px;" />
			<col style="width:80px;" />
			<col />
			<col />
			<col style="width:120px;" />
			<% if can?(:update, AttendanceEvent) || can?(:delete, AttendanceEvent) %>
			<col <%= raw manage_width(AttendanceEvent) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>
				<th><%= t(:label_photo)%></th>
				<th><%= t(:label_title)%></th>
				<th>headtext</th>
				<th><%= t(:label_created_at)%></th>
				<% if can?(:update, AttendanceEvent) || can?(:delete, AttendanceEvent) %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @attendance_events.empty? %>
			<% @attendance_events.each do |attendance_setting| %>
			<tr>
				<td><%= attendance_setting.id %></td>
				<td><%= image_tag attendance_setting.photo.small_thumb %></td>
				<td><%= attendance_setting.title %></td>
				<td><%= attendance_setting.headtext %></td>
				<td><%= attendance_setting.created_at.to_date %></td>
				<% if can?(:update, attendance_setting) || can?(:delete, attendance_setting) %>
				<td> <% if can? :update, attendance_setting %>
				<%= link_to edit_attendance_setting_path(attendance_setting),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, attendance_setting %>
				<%= link_to attendance_setting, :method => :delete, :data => { :confirm =>t(:delete_confirm)},:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="10"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, AttendanceEvent %>
		<%= link_to new_admin_attendance_event_path, :class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
		<% if can? :manage, AttendanceEvent %>
		<% unless @attendance_events.empty? %>
		<%=link_to admin_attendance_events_path(:format=>"xls",:params=>params), :class=>"btn btn-default" do %>
		<i class="glyphicon glyphicon-file"></i> <%= t(:link_download_excel) %>
		<% end %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @attendance_events %>
</div>

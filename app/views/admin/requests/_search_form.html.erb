<%=form_tag admin_requests_path,:method=>:get,:class=>"form-search sl_search" do %>
	<table class="table table-bordered table-striped">
		<tr>
			<th><%=label_tag :cell_phone,t(:label_mobile_num) %></th>
			<td><%=text_field_tag :cell_phone,params[:cell_phone] %></td>
		</tr>
		<tr>
			<th><%=label_tag :login_id,t(:label_login_id) %></th>
			<td><%=text_field_tag :login_id,params[:login_id] %></td>
		</tr>
		<tr>
			<th><%=label_tag :request_type,t(:label_status) %></th>
			<td>
				<%= select_tag :request_type, options_from_collection_for_select(RequestType.where(:flag=>true).all, 'id', 'title',params[:request_type_id]),:include_blank => 'None',:class=>"input-small span4" %>
			</td>
		</tr>
		<tr>
			<th><%=label_tag :request_setting_id,t(:label_request_amount) %></th>
			<td>
				<%= select_tag :request_setting_id, options_from_collection_for_select(RequestSetting.where(:flag=>true).all, 'id', 'title',params[:request_setting_id]),:include_blank => 'None',:class=>"input-small span4" %>
			</td>
		</tr>
		<tr>
			<th><%=label_tag :bank_id,t(:label_bankname) %></th>
			<td>
				<%= select_tag :bank_id, options_from_collection_for_select(Bank.where(:flag=>true).all, 'id', 'name',params[:bank_id]),:include_blank => 'None',:class=>"input-small span4" %>
			</td>
		</tr>		
		<tr>
			<th><%=label_tag :start_date,t(:label_period_search) %></th>
			<td>
				<%=text_field_tag :start_date,@start_date,{:type=>:date,:class=>"datepicker"} %> ~ <%=text_field_tag :end_date,@end_date,{:type=>:date,:class=>"datepicker"} %>
				<div style="margin:10px">
					<input type="radio" id="pe1" name="date_p" value="0" <% if params[:date_p]=='0' %>checked="checked"<% end %> /><label for="pe1"><%=t(:period_today) %></label>
					<input type="radio" id="pe2" name="date_p" value="7" <% if params[:date_p]=='7' %>checked="checked"<% end %> /><label for="pe2"><%=t(:period_week) %></label>
					<input type="radio" id="pe3" name="date_p" value="30" <% if params[:date_p]=='30' %>checked="checked"<% end %> /><label for="pe3"><%=t(:period_month) %></label>
					<input type="radio" id="pe4" name="date_p" value="90" <% if params[:date_p]=='90' %>checked="checked"<% end %> /><label for="pe4"><%=t(:period_month3) %></label>
					<input type="radio" id="pe5" name="date_p" value="180" <% if params[:date_p]=='180' %>checked="checked"<% end %> /><label for="pe5"><%=t(:period_month6) %></label>
					<input type="radio" id="pe6" name="date_p" value="false" <% if params[:date_p]==false %>checked="checked"<% end %> /><label for="pe6"><%=t(:period_all) %></label>
				</div>
				<div>
					<%=submit_tag t(:search), :class=>"btn btn-primary"%>
				</div>
			</td>
		</tr>
	</table>
<% end %>
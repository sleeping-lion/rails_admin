<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:80px;" />
		<col style="width:100px;" />
		<% if can?(:update, TargetType) || can?(:delete, TargetType) %>
		<col <%=raw manage_width(TargetType) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number)%></th>
			<th><%=t(:label_title)%></th>
			<th><%=t(:label_flag)%></th>
			<th><%=t(:label_created_at)%></th>
			<% if can?(:update, TargetType) || can?(:delete, TargetType) %>
			<th><%=t(:label_manage)%></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @target_types.empty? %>
		<% @target_types.each do |target_type| %>
		<tr>
			<td><%=target_type.id %></td>
			<td class="mw"><%=link_to target_type.title,admin_target_type_path(target_type,params) %></td>
			<td><%=raw flagToString(target_type.flag) %></td>
			<td><%=target_type.created_at.to_date %></td>
			<% if can?(:update, target_type) || can?(:delete, target_type) %>	
			<td>
				<% if can? :update, target_type %>
				<%= link_to edit_admin_target_type_path(target_type),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, target_type %>
				<%= link_to admin_target_type_path(target_type), :method => :delete, :data => { :confirm =>t(:delete_cascade_confirm) },:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="5"><%=t(:no_date)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<div class="pull-left">
		<% if can? :create, TargetType %>		
		<%= link_to new_admin_target_type_path, :class=>"btn" do %>
		<i class="icon-plus"></i> <%=t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @target_types %>
</div>
<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
	<%=form_tag admin_faqs_path,:method=>:get,:class=>"form-search pull-right" do %>
		<select name="search_field" class="input-small">
			<option value="title"><%=t(:label_title) %></option>
			<option value="content"><%=t(:label_content) %></option>
		</select>
		<div class="input-append">
			<input type="text" name="search_value" value="<%=params[:search_value] %>" class="input-middles" required="required" />
			<%=button_tag t(:search),:type=>"submit",:class=>"btn" %>
		</div>
	<% end %>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:80px;" />
		<col style="width:100px;" />
		<% if can?(:update, Faq) || can?(:delete, Faq) %>
		<col <%=raw manage_width(Faq) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_title) %></th>
			<th><%=t(:label_flag) %></th>
			<th><%=t(:label_created_at) %></th>
			<% if can?(:update, Faq) || can?(:delete, Faq) %>
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @faqs.empty? %>
		<% @faqs.each do |faq| %>
		<tr>
			<td><%=link_to faq.id,admin_faq_path(faq,params) %></td>
			<td class="mw"><%=link_to faq.title,admin_faq_path(faq,params) %></td>
			<td><%=raw flagToString(faq.flag) %></td>
			<td><%=faq.created_at.to_date %></td>
			<% if can?(:update, faq) || can?(:delete, faq) %>	
			<td>
				<% if can? :update, faq %>				
				<%= link_to edit_faq_path(faq),:class=>"btn btn-small btn-default" do %>
				<i class="glyphicon glyphicon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, faq %>				
				<%= link_to faq, :method => :delete, :data => { :confirm =>t(:delete_confirm) },:class=>"btn btn-small btn-danger" do %>
				<i class="glyphicon glyphicon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="5"><%=t(:no_data)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, Faq %>
		<%= link_to new_admin_faq_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
		<% if can? :manage, Faq %>
		<% unless @faqs.empty? %>
		<%=link_to admin_faqs_path(:format=>"xls",:params=>params), :class=>"btn btn-default" do %>
		<i class="glyphicon glyphicon-file"></i> <%= t(:link_download_excel) %>
		<% end %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @faqs %>
</div>
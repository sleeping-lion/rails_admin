<%= form_for [:admin,@application_version] do |f| %>
<% if @application_version.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(@application_version.errors.count, "error") %> prohibited this sponsor from being saved:</h2>
	<ul>
		<% @application_version.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :client_version, :class => 'control-label' %>
	<%= f.text_field :client_version,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :label_update_type, :class => 'control-label' %>
	<%= f.select :state, [['선택업데이트', 1], ['필수업데이트', 2]],:class=>"form-control" %>
</div>
<div class="form-group">
	<%= f.label :version_name, :class => 'control-label' %>
	<%= f.text_field :version_name,:class=>"form-control" ,:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :apk_file, :class => 'control-label' %>
	<%= f.file_field :apk_file %>
</div>
<div class="form-group">
	<%= f.label :contents, :class => 'control-label' %>
	<%= f.text_area :contents,:id=>"sl_content",:class=>"form-control",:rows=>10,:cols=>50,:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :update_date, :class => 'control-label' %>
	<%= f.datetime_select :update_date,:class=>"form-control" %>
</div>
<div class="form-group">
	<%= f.label :flag, :class => 'control-label' %>
	<%= f.check_box :flag %>
</div>
<div class="form-group actions">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>

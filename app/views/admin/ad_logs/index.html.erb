<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<div class="box">
	<div class="box-header">
		<h2><i class="icon-align-justify"></i><span class="break"></span><%=t(:search)%></h2>
		<div class="box-icon">
			<a href="#" class="btn-minimize"><i class="icon-chevron-down"></i></a>
			<a class="btn-close" href="#"><i class="icon-remove"></i></a>
		</div>
	</div>
	<div style="display:none" class="box-content">
		<%= render 'search_form' %>
	</div>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:100px;" />
		<col style="width:100px;" />				
		<col style="width:80px;" />
		<col style="width:100px;" />
		<col />
		<% if can? :delete, AdLog %>
		<col style="width:90px;" />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_ad) %></th>
			<th><%=t(:label_category) %></th>
			<th><%=t(:label_point)%></th>
			<th><%=t(:label_client_point) %></th>
			<th><%=t(:label_client_time) %></th>			
			<th><%=t(:label_created_at) %></th>
			<% if can? :delete, AdLog %>	
			<th><%=t(:label_manage) %></th>
			<% end %>			
		</tr>
	</thead>
	<tbody>
		<% unless @ad_logs.empty? %>
		<% @ad_logs.each do |ad_log| %>
		<tr>
			<td><%= ad_log.id %></td>
			<td>
				<% if ad_log.ad %>
				<%=ad_log.ad.title %>
				<% else %>
				<%=t(:no_exist_ad)%>
				<% end %>
			</td>
			<td>
				<% if ad_log.ad_log_type %>
				<%=ad_log.ad_log_type.title %>
				<% else %>
				<%=t(:no_exist_ad)%>
				<% end %>				
			</td>
			<td><%=ad_log.point %></td>
			<td><%=ad_log.clientpoint %></td>
			<td><%=ad_log.clienttime %></td>			
			<td><%=ad_log.created_at %></td>
			<td>
			<% if can? :delete, ad_log %>
			<%= link_to ad_log, :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-small btn-danger pull-right" do %>
			<i class="icon-trash"></i> <%= t(:link_delete) %>
			<% end %>
			<% end %>
			</td>
			</tr>
			<% end %>
			<% else %>
			<tr>
			<td colspan="8"><%=t(:no_data)%></td>
			</tr>
			<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<%= paginate @ad_logs %>
</div>
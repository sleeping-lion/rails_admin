<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:80px;" />
		<col style="width:100px;" />
		<% if can?(:update, RequestSetting) || can?(:delete, RequestSetting) %>
		<col <%=raw manage_width(RequestSetting) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_title) %></th>
			<th><%=t(:label_flag) %></th>
			<th><%=t(:label_created_at) %></th>
			<% if can?(:update, RequestSetting) || can?(:delete, RequestSetting) %>
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @request_settings.empty?  %>
		<% @request_settings.each do |request_setting| %>
		<tr>
			<td><%=request_setting.id %></td>
			<td class="mw"><%=link_to request_setting.title,admin_request_setting_path(request_setting) %></td>
			<td><%=raw flagToString(request_setting.flag) %></td>
			<td><%=request_setting.created_at.to_date %></td>
			<% if can?(:update, RequestSetting) || can?(:delete, RequestSetting) %>		
			<td>
				<% if can? :update, RequestSetting %>
				<%= link_to edit_admin_request_setting_path(request_setting),:class=>"btn btn-default" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, RequestSetting %>			
				<%= link_to admin_request_setting_path(request_setting), :method => :delete, :data => { :confirm => t(:delete_cascade_confirm)},:class=>"btn btn-danger" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="5"><%=t(:no_data)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<div class="pull-left">
		<% if can? :create, RequestSetting %>
		<%= link_to new_admin_request_setting_path, :class=>"btn btn-primary" do %>
		<i class="icon-plus"></i> <%=t(:link_new) %>
		<% end %>
		<% end %>
		<% unless @request_settings.empty? %>
		<%=link_to admin_request_settings_path(:format=>"xls",:params=>params), :class=>"btn default" do %>
		<i class="icon-file"></i> <%=t(:link_download_excel) %>
		<% end %>
		<% end %>		
	</div>
	<%= paginate @request_settings %>
</div>
<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:80px;" />
		<col style="width:100px;" />
		<% if can?(:update, AdFileType) || can?(:delete, AdFileType) %>
		<col <%=raw manage_width(AdFileType) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number)%></th>
			<th><%=t(:label_title)%></th>
			<th><%=t(:label_flag)%></th>
			<th><%=t(:label_created_at)%></th>
			<% if can?(:update, AdFileType) || can?(:delete, AdFileType) %>
			<th><%=t(:label_manage)%></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% if @ad_file_types.length > 0 %>
		<% @ad_file_types.each do |ad_file_type| %>
		<tr>
			<td><%= ad_file_type.id %></td>
			<td class="mw"><%= link_to ad_file_type.title,admin_ad_file_type_path(ad_file_type) %></td>
			<td><%= raw flagToString(ad_file_type.flag) %></td>
			<td><%=ad_file_type.created_at.to_date %></td>
			<% if can?(:update, ad_file_type) || can?(:delete, ad_file_type) %>
			<td>
			<% if can? :update, ad_file_type %>
			<%= link_to edit_admin_ad_file_type_path(ad_file_type),:class=>"btn btn-small pull-left" do %>
			<i class="icon-pencil"></i> <%= t(:link_edit) %>			
			<% end %>
			<% end %>
			<% if can? :delete, ad_file_type %>			
			<%= link_to admin_ad_file_type_path(ad_file_type), :method => :delete, :data => { :confirm => t(:delete_cascade_confirm) },:class=>"btn btn-small btn-danger pull-right" do %>
			<i class="icon-trash"></i> <%= t(:link_delete) %>
			<% end %>
			<% end %>
			</td>
			<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
			<td colspan="5"><%=t(:no_data)%></td>
			</tr>
			<% end %>
	</tbody>
</table>


<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, AdFileType %>
		<%= link_to new_admin_ad_file_type_path, :class=>"btn" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @ad_file_types %>
</div>

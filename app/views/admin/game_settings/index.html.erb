<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col />		
		<col />
		<col style="width:80px;" />		
		<col style="width:200px;" />
		<% if can?(:update, GameSetting) || can?(:delete, GameSetting) %>
		<col <%=raw manage_width(GameSetting) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_title) %></th>	
			<th><%=t(:label_percentage) %></th>
			<th><%=t(:label_get_amount) %></th>
			<th><%=t(:label_flag) %></th>			
			<th><%=t(:label_created_at) %></th>
			<% if can?(:update, GameSetting) || can?(:delete, GameSetting) %>
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @game_settings.empty? %>
		<% @game_settings.each do |game_setting| %>
		<tr>
			<td><%=link_to game_setting.id,admin_game_setting_path(game_setting) %></td>
			<td class="mw"><%=link_to game_setting.title,admin_game_setting_path(game_setting) %></td>
			<td><%=link_to game_setting.percentage,admin_game_setting_path(game_setting) %>%</td>	
			<td><%=link_to game_setting.amount,admin_game_setting_path(game_setting) %> <%=t(:label_point)%></td>
			<td><%= raw flagToString(game_setting.flag) %></td>			
			<td><%=game_setting.created_at %></td>
			<% if can?(:update, game_setting) || can?(:delete, game_setting) %>
			<td>
				<% if can? :update, game_setting %>						
				<%= link_to edit_admin_game_setting_path(game_setting),:class=>"btn btn-default" do %>
				<i class="glyphicon glyphicon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, game_setting %>		
				<%= link_to admin_game_setting_path(game_setting), :method => :delete, :data => { :confirm =>t(:delete_cascade_confirm)},:class=>"btn btn-danger" do %>
				<i class="glyphicon glyphicon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="7"><%=t(:no_data)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
	<% if can? :create, GameSetting %>					
	<%= link_to new_admin_game_setting_path, :class=>"btn btn-primary" do %>
	<i class="glyphicon glyphicon-plus"></i> <%=t(:link_new) %>
	<% end %>
	<% end %>
	</div>
	<%= paginate @game_settings %>
</div>
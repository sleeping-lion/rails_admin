<%= form_for [:admin,@operator], :html=>{:class=>"form-horizontal"} do |f| %>
	<% if @operator.errors.any? %>
	<div id="error_explanation" class="alert alert-error">
		<a href="#" class="close" data-dismiss="alert">&times;</a>
		<h2><%= pluralize(@operator.errors.count, "error") %> prohibited this sponsor from being saved:</h2>
		<ul>
			<% @operator.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<%=f.hidden_field :parent_id, :value=>current_admin.id %>
	  <div class="control-group">
	  	<%= f.label :login_id, :class => "control-label" %>
	    <div class="controls">
	  	<%= f.text_field :login_id, :autofocus => true %>
	  	</div>
		</div>	
  
	  <div class="control-group">
	  	<%= f.label :nickname, :class => "control-label" %>
	    <div class="controls">
	  	<%= f.text_field :nickname, :autofocus => true %>
		</div>
	  </div> 
	  <div class="control-group">
	  	<%= f.label :email, :class => "control-label" %>
	    <div class="controls">
	  	<%= f.email_field :email, :autofocus => true %>
		</div>
	  </div>
	  <div class="control-group">
		<%= f.label :photo,t(:label_image), :class => "control-label" %>	
	    <div class="controls">
			<% if @operator.photo? %>
				<%= image_tag(@operator.photo.small_thumb) %>
				<br />
			<% end %>
			<%= f.file_field :photo %>
			<%= f.hidden_field :photo_cache %>
		</div>
	  </div>
  <div class="control-group">
    <%= f.label :password,t(:label_password),:class=>"control-label" %>
    <div class="controls">    
    <%= f.password_field :password %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation,t(:label_password_confirm),:class=>"control-label" %>
    <div class="controls">    
    <%= f.password_field :password_confirmation %>
    </div>
  </div>
	  <div class="control-group">
	  	<%=label_tag :role_id,t(:label_privilege), :class => "control-label" %>
  <div class="controls">
  	<% if @operator.roles_admin.exists?
  		if @operator.roles_admin[0].present?
  		va=@operator.roles_admin[0].role_id
  		end
  		end
  		 %>
    <%=select_tag :role_id, options_from_collection_for_select(Role.where(:flag=>true).all(), 'id', 'title',va) %>
  </div>
	  </div>
	  <div class="control-group">
	  	<%= f.label :company,'Company', :class => "control-label" %> 
	    <div class="controls">
	  	<%= f.text_field :company %>
		</div>
	  </div> 
	  <div class="control-group">
	  	<%= f.label :tel1,'Tel1', :class => "control-label" %> 
	    <div class="controls">
	  	<%= f.text_field :tel1 %>
		</div>
	  </div> 
	  <div class="control-group">
	  	<%= f.label :tel2,'Tel2', :class => "control-label" %> 
	    <div class="controls">
	  	<%= f.text_field :tel2 %>
		</div>
	  </div>
	  <div class="control-group">
	  	<%=f.label :address_id,t(:label_address), :class => "control-label" %>
  		<div class="controls">
    <%=f.select :address_id, options_from_collection_for_select(Address.where(:flag=>true).all(),'id', 'full_address',@operator.address_id),{:include_blank => '주소를 입력하려면 선택하세요'} %>
  	</div>
	  </div>	  
	  <div class="control-group">
	  	<%= f.label :address1,'Address1', :class => "control-label" %> 
	    <div class="controls">
	  	<%= f.text_field :address1 %>
		</div>
	  </div> 
	  <div class="control-group">
	  	<%= f.label :address2,'Address2', :class => "control-label" %> 
	    <div class="controls">
	  	<%= f.text_field :address2 %>
		</div>
	  </div> 
	  <div class="control-group">
	  	<%= f.label :flag,t(:label_flag), :class => "control-label" %> 
	    <div class="controls">
	  	<%= f.check_box :flag %>
			</div>
		</div>			

  <div class="control-group actions">
    <%= f.submit :class=>"btn btn-primary" %>
  </div>
<% end %>
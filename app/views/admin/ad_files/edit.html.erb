<%= form_for [@ad_file.ad,@ad_file] do |f| %>
	<%= f.hidden_field :checksum,:value=>'asdgsadg' %>
	<%= f.hidden_field :fileext,:value=>'asdgsadg' %>
	<%= f.hidden_field :filetype,:value=>'asdgsadg' %>
	<div class="form-group">
		<%= f.label :ad_file_type_id,t(:label_category) %>
		<%= f.select :ad_file_type_id, options_from_collection_for_select(AdFileType.find(:all,:conditions=>{:flag=>true}), 'id', 'title',@ad_file.ad_file_type_id) %>
	</div>	
 	<div class="form-group">
 		<%= f.label :photo %>
			<% if @ad_file.photo? %>
				<%= image_tag(@ad_file.photo.medium_thumb) %>
				<br />
			<% end %> 		
 		<%= f.file_field :photo %>
 		<%= f.hidden_field :photo_cache %>
 	</div>
 	<div class="form-group"> 	 	
 		<%= f.label :flag %> 		
 		<%= f.check_box :flag %>
 	</div> 	
 	<div class="form-group actions">
 		<%= f.submit :class=>"btn btn-primary" %>
 	</div>
<% end %>
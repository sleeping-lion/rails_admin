<%= form_for [:admin,@quiz,QuizQuestion.new],:html=>{:class=>"form-horizontal"} do |f| %>
<div class="box">
	<div class="box-header">
		<h2><i class="glyphicon glyphicon-align-justify"></i><span class="break"></span><%=t(:quiz_question_insert) %></h2>
		<div class="box-icon">
			<a href="#" class="btn-minimize"><i class="glyphicon glyphicon-chevron-up"></i></a>
		</div>
	</div>
	<div class="box-content">
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, :class => "input-large" %>	<%= f.submit :class=>"btn btn-primary" %>		
		</div>		
	</div>
</div>
<% end %>
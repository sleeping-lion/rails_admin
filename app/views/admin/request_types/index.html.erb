<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />
			<col />
			<col style="width:80px;" />
			<col style="width:100px;" />
			<% if can? :update, RequestType %>
			<col <%= raw manage_width(RequestType) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>
				<th><%= t(:label_title) %></th>
				<th><%= t(:label_flag) %></th>
				<th><%= t(:label_created_at) %></th>
				<% if can? :update, RequestType %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @request_types.empty?  %>
			<% @request_types.each do |request_type| %>
			<tr>
				<td><%= request_type.id %></td>
				<td class="mw"><%= link_to request_type.title,admin_request_type_path(request_type) %></td>
				<td><%= raw flagToString(request_type.flag) %></td>
				<td><%= request_type.created_at.to_date %></td>
				<% if can? :update, request_type %>
				<td> <% if can? :update, request_type %>
				<%= link_to edit_admin_request_type_path(request_type),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, request_type %>
				<%= link_to admin_request_type_path(request_type), :method => :delete, :data => { :confirm => t(:delete_cascade_confirm)},:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="5"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, RequestType %>
		<%= link_to new_admin_request_type_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @request_types %>
</div>

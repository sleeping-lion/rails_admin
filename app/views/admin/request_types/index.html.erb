<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col />
		<col style="width:80px;" />
		<col style="width:100px;" />
		<% if can? :update, RequestType %>		
		<col <%=raw manage_width(RequestType) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number) %></th>
			<th><%=t(:label_title) %></th>
			<th><%=t(:label_flag) %></th>
			<th><%=t(:label_created_at) %></th>
			<% if can? :update, RequestType %>			
			<th><%=t(:label_manage) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @request_types.empty?  %>
		<% @request_types.each do |request_type| %>
		<tr>
			<td><%=request_type.id %></td>
			<td class="mw"><%=link_to request_type.title,request_type_path(request_type) %></td>
			<td><%=raw flagToString(request_type.flag) %></td>
			<td><%=request_type.created_at.to_date %></td>
			<% if can? :update, request_type %>								
			<td>
				<% if can? :update, request_type %>
				<%= link_to edit_request_type_path(request_type),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, request_type %>				
				<%= link_to request_type, :method => :delete, :data => { :confirm => t(:delete_cascade_confirm)},:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="5"><%=t(:no_data)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<% if can? :create, RequestType %>	
	<div class="pull-left">
		<%= link_to new_request_type_path, :class=>"btn" do %>
		<i class="icon-plus"></i> <%=t(:link_new) %>
		<% end %>
	</div>
	<% end %>
	<%= paginate @request_types %>
</div>
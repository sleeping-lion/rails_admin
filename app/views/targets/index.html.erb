<div class="row-fluid">
	<h3 class="pull-left"><%= @controller_name %> <%=actionNameChange controller.action_name %></h3>
</div>
<table class="table table-bordered table-striped">
	<colgroup>
		<col style="width:80px;" />
		<col style="width:100px;" />
		<col />
		<col style="width:80px;" />
		<col style="width:100px;" />
		<% if can?(:update, Target) || can?(:delete, Target) %>
		<col <%=raw manage_width(Target) %> />
		<% end %>
	</colgroup>
	<thead>
		<tr>
			<th><%=t(:label_number)%></th>
			<th><%=t(:label_category)%></th>
			<th><%=t(:label_title)%></th>
			<th><%=t(:label_flag)%></th>
			<th><%=t(:label_created_at)%></th>
			<% if can?(:update, Target) || can?(:delete, Target) %>
			<th><%=t(:label_manage)%></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% unless @targets.empty? %>
		<% @targets.each do |target| %>
		<tr>
			<td><%=target.id %></td>
			<td><%=target.target_type.title %></td>
			<td class="mw"><%=link_to target.title,target_path(target,params) %></td>
			<td><%=raw flagToString(target.flag) %></td>
			<td><%=target.created_at.to_date %></td>
			<% if can?(:update, target) || can?(:delete, target) %>
			<td>
				<% if can? :update, target %>
				<%= link_to edit_target_path(target),:class=>"btn btn-small pull-left" do %>
				<i class="icon-pencil"></i> <%=t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, target %>				
				<%= link_to target, :method => :delete, :data => { :confirm =>t(:delete_cascade_confirm)},:class=>"btn btn-small btn-danger pull-right" do %>
				<i class="icon-trash"></i> <%=t(:link_delete) %>
				<% end %>
				<% end %>
			</td>
			<% end %>
		</tr>
		<% end %>
		<% else %>
		<tr>
			<td colspan="5"><%=t(:no_data)%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row-fluid">
	<% if can? :create, Target %>
	<div class="pull-left">		
		<%= link_to new_target_path, :class=>"btn" do %>
		<i class="icon-plus"></i> <%=t(:link_new) %>
		<% end %>
	</div>
	<% end %>
	<%= paginate @targets %>
</div>
<!DOCTYPE html>
<html lang="ko">
<head>
	<meta charset="utf-8">
	<title><%=t(:service_name)%></title>
	<meta name="description" content="<%=t(:service_name)%> Admin System">
	<meta name="author" content="Sleeping-Lion">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="shortcut icon" href="/assets/favicon.ico">
	<%= stylesheet_link_tag "application", :media => "all" %>
	<%= csrf_meta_tags %>
</head>
<body>
	<%= render :partial => 'layouts/header' %>
	<div id="mom" class="container-fluid">
		<div id="main" class="row">
			<div id="content" class="col-xs-12 col-lg-10">
				<% if current_page?(root_path) %>
					<br />
					<% else %>
					<% if(!params[:no_layout] and !current_page?(root_path)) %>

						<ul class="breadcrumb">
							<li><%= link_to t(:home),root_path %></li>
							<% if(@category.present?) %>
							<li><a href="#"><%= @category %></a><% if(@sub_menu) %><% end %></li>
							<% end %>	
							<li><a href="#"><%= @sub_menu %></a></li>
							<li><a href="#"><%=actionNameChange controller.action_name %></a></li>
						</ul>
						<hr />

					<% end %>
					<% end %>
					
		<%= yield %>
					</div>
				</div><!--/#content.span10-->						
			</div>
	<%= render :partial => 'layouts/footer' %>
			<div class="modal hide fade" id="myModal" style="width:700px">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">
						Ã—
					</button>
					<h3>Settings</h3>
				</div>
				<div class="modal-body">
					<p>
						Here settings can be configured...
					</p>
				</div>
				<div class="modal-footer">
					<a href="#" class="btn" data-dismiss="modal">Close</a>
				</div>
			</div>	
	<%= javascript_include_tag @script %>				
</body>
</html>